{
  "name": "Laravel Inertia Development",

  // Configuração principal: imagem única otimizada
  // "image": "mcr.microsoft.com/devcontainers/php:1-8.2-bullseye",
  
  // Alternativa com PostgreSQL: descomente as linhas abaixo e comente a linha "image" acima
  "dockerComposeFile": "./docker-compose.postgres.yml",
  "service": "laravel-app",
  "workspaceFolder": "/workspaces/laravel_com_inertia",

  "features": {
    // Node LTS, ideal para projetos Vue + Vite  
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    },

    // Python para scripts de documentação UML
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        // PHP
        "xdebug.php-debug",
        "bmewburn.vscode-intelephense-client",
        "onecentlin.laravel-blade",
        "mohamedbenhida.laravel-intellisense",
        "amiralizadeh9480.laravel-extra-intellisense",

        // Front-end
        "Vue.volar",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "bradlc.vscode-tailwindcss",

        // TypeScript
        "ms-vscode.vscode-typescript-next",

        // Análise de código
        "phpstan.phpstan",
        "getpsalm.psalm-vscode-plugin",

        // AI e produtividade
        "GitHub.copilot",
        "ms-vscode.vscode-json",
        "redhat.vscode-yaml"
      ],
      "settings": {
        // PHP
        "php.validate.executablePath": "/usr/local/bin/php",
        "intelephense.environment.phpVersion": "8.2",
        "intelephense.files.associations": [
          "*.php",
          "*.phtml",
          "*.blade.php"
        ],

        // PHPStan
        "phpstan.enabled": true,
        "phpstan.configFile": "./phpstan.neon",

        // Formatação
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "always",
          "source.organizeImports": "explicit"
        },

        // Prettier
        "prettier.singleQuote": true,
        "prettier.semi": false,
        "prettier.configPath": "./.prettierrc",

        // Tailwind
        "tailwindCSS.includeLanguages": {
          "vue": "html",
          "vue-html": "html"
        },
        "tailwindCSS.experimental.configFile": "./tailwind.config.js",

        // ESLint
        "eslint.validate": ["vue", "typescript", "javascript"],
        "eslint.workingDirectories": ["src"],

        // TypeScript
        "typescript.preferences.importModuleSpecifier": "relative",
        "typescript.suggest.autoImports": true,

        // Editor UX
        "editor.tabSize": 2,
        "editor.bracketPairColorization.enabled": true,
        "editor.guides.bracketPairs": true,
        "editor.minimap.enabled": false,
        "explorer.compactFolders": false,

        // Formatadores específicos
        "[vue]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[typescript]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[javascript]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[php]": {
          "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
        },
        "[json]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },

        // Terminal
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.cwd": "${workspaceFolder}/src"
      }
    }
  },

  // Portas padrão do Laravel, Vite, Xdebug
  "forwardPorts": [8000, 5173, 9000, 24678],
  "portsAttributes": {
    "8000": {
      "label": "Laravel App",
      "onAutoForward": "notify"
    },
    "5173": {
      "label": "Vite Dev Server",
      "onAutoForward": "openBrowser"
    },
    "9000": {
      "label": "Xdebug",
      "onAutoForward": "silent"
    }
  },

  // Mounts otimizados para evitar conflitos de permissão
  "mounts": [
    "source=laravel-node-modules,target=${containerWorkspaceFolder}/src/node_modules,type=volume",
    "source=laravel-vendor,target=${containerWorkspaceFolder}/src/vendor,type=volume",
    "source=laravel-storage-cache,target=${containerWorkspaceFolder}/src/storage/framework/cache,type=volume"
  ],

  // Script de inicialização para resolver permissões
  "onCreateCommand": "sudo chown -R vscode:vscode /workspaces/laravel_com_inertia",

  // Comando de pós-instalação simplificado
  "postCreateCommand": "cd src && composer clear-cache && composer install --no-dev --optimize-autoloader && npm ci && cp .env.example .env && php artisan key:generate && php artisan storage:link && php artisan config:cache && python3 -m pip install plantuml && echo 'DevContainer configurado!'",

  // Variáveis de ambiente
  "containerEnv": {
    "XDEBUG_MODE": "debug",
    "XDEBUG_START_WITH_REQUEST": "yes",
    "XDEBUG_CLIENT_HOST": "host.docker.internal",
    "XDEBUG_CLIENT_PORT": "9000"
  },

  // Garante ambiente não-root e compatível com VS Code
  "remoteUser": "vscode"
}
