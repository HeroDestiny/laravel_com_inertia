{
  "name": "Laravel Inertia Development (Fallback)",
  "image": "mcr.microsoft.com/devcontainers/php:1-8.2-bullseye",
  
  "features": {
    "ghcr.io/devcontainers-extra/features/composer:1": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    },
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "xdebug.php-debug",
        "bmewburn.vscode-intelephense-client",
        "onecentlin.laravel-blade",
        "mohamedbenhida.laravel-intellisense",
        "amiralizadeh9480.laravel-extra-intellisense",
        "Vue.volar",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "bradlc.vscode-tailwindcss",
        "ms-vscode.vscode-typescript-next",
        "phpstan.phpstan",
        "getpsalm.psalm-vscode-plugin",
        "GitHub.copilot",
        "ms-vscode.vscode-json",
        "redhat.vscode-yaml"
      ],
      "settings": {
        "php.validate.executablePath": "/usr/local/bin/php",
        "intelephense.environment.phpVersion": "8.2",
        "intelephense.files.associations": [
          "*.php",
          "*.phtml",
          "*.blade.php"
        ],
        "phpstan.enabled": true,
        "phpstan.configFile": "./phpstan.neon",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "always",
          "source.organizeImports": "explicit"
        },
        "prettier.singleQuote": true,
        "prettier.semi": false,
        "prettier.configPath": "./.prettierrc",
        "tailwindCSS.includeLanguages": {
          "vue": "html",
          "vue-html": "html"
        },
        "tailwindCSS.experimental.configFile": "./tailwind.config.js",
        "eslint.validate": ["vue", "typescript", "javascript"],
        "eslint.workingDirectories": ["src"],
        "typescript.preferences.importModuleSpecifier": "relative",
        "typescript.suggest.autoImports": true,
        "editor.tabSize": 2,
        "editor.bracketPairColorization.enabled": true,
        "editor.guides.bracketPairs": true,
        "editor.minimap.enabled": false,
        "explorer.compactFolders": false,
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.cwd": "${workspaceFolder}/src"
      }
    }
  },

  "forwardPorts": [8000, 5173, 9000, 24678],
  "portsAttributes": {
    "8000": {
      "label": "Laravel App",
      "onAutoForward": "notify"
    },
    "5173": {
      "label": "Vite Dev Server",
      "onAutoForward": "openBrowser"
    },
    "9000": {
      "label": "Xdebug",
      "onAutoForward": "silent"
    }
  },

  "postCreateCommand": "echo 'DevContainer iniciado! Execute ./scripts/fix-devcontainer.sh para configurar o projeto.'",

  "containerEnv": {
    "XDEBUG_MODE": "debug",
    "XDEBUG_START_WITH_REQUEST": "yes",
    "XDEBUG_CLIENT_HOST": "host.docker.internal",
    "XDEBUG_CLIENT_PORT": "9000"
  },

  "remoteUser": "vscode"
}
