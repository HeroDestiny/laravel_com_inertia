{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Listen for Xdebug",
      "type": "php",
      "request": "launch",
      "port": 9000,
      "pathMappings": {
        "/workspaces/laravel_com_inertia/src": "${workspaceFolder}/src"
      },
      "log": true,
      "xdebugSettings": {
        "max_children": 999,
        "max_data": 1024,
        "max_depth": 5
      }
    },
    {
      "name": "Launch currently open script",
      "type": "php",
      "request": "launch",
      "program": "${file}",
      "cwd": "${fileDirname}",
      "port": 9000
    }
  ]
}
